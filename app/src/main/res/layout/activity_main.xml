<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="MTC Spin to Win"
        android:textAlignment="center"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:background="#888" />

    <View
        android:layout_width="4dp"
        android:layout_height="20dp"
        android:background="#888"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/img_spin_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/spin_mtc_1" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_spin"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:text="Spin" />

        <TextView
            android:id="@+id/txt_spins_avail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spins Available: 0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_credit_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="Enter amount"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_add_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Credit"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>